{
	"name": "work-sample-api",
	"version": "0.0.1",
	"description": "Simple API server as stipulated in original PENSCO document",
	"repository": "github:marcusreese/work-sample-2019",
	"author": "Marcus Reese",
	"license": "MIT",
	"private": true,
	"scripts": {
		"tsc": "tsc",
		"dev": "ts-node-dev --respawn --transpileOnly ./src/server.ts",
		"prod": "tsc && node ./build/app.js",
		"test": "jest --runInBand",
		"ts-jest": "ts-jest",
		"inspect": "ts-node-dev --inspect-brk --transpileOnly ./src/server.ts"
	},
	"jest": {
		"collectCoverage": true,
		"moduleFileExtensions": [
			"ts",
			"tsx",
			"js"
		],
		"transform": {
			"^.+\\.tsx?$": "ts-jest"
		},
		"globals": {
			"ts-jest": {
				"tsConfig": "tsconfig.json"
			}
		},
		"testMatch": [
			"**/*.spec.ts"
		]
	},
	"dependencies": {
		"@types/node-cleanup": "^2.1.0",
		"@types/sqlite3": "^3.1.5",
		"express": "^4.16.4",
		"got": "^9.6.0",
		"node-cleanup": "^2.1.2",
		"sqlite": "^3.0.3",
		"sqlite3": "^4.0.6",
		"typescript": "^3.4.1",
		"uuid": "^3.3.2"
	},
	"devDependencies": {
		"@types/express": "^4.16.1",
		"@types/got": "^9.4.1",
		"@types/jest": "^24.0.11",
		"@types/nock": "^9.3.1",
		"@types/supertest": "^2.0.7",
		"@types/uuid": "^3.4.4",
		"jest": "^24.5.0",
		"nock": "^10.0.6",
		"supertest": "^4.0.2",
		"ts-jest": "^24.0.0",
		"ts-node-dev": "^1.0.0-pre.32"
	}
}
